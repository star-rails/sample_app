<h1>Update you profile</h1>
<%= form_for @user do |f| %>
<%= render 'shared/error_messages' %>
	<p>
		<%=f.label("帐号:") %>
		<%=f.text_field :name %>
		<p><br/>
	<p>
		<%=f.label("邮箱:") %>
		<%=f.text_field :email %>
		<p><br/>

	<p>
		<%=f.label("密码:")%>
		<%=f.password_field :password %>
		<p><br/>
	<%=f.submit()%>
<%  end %>
<a href="http://gravatar.com/emails">change</a>
 
